<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AttributeTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="AttackTextStyle" parent="AttributeTextStyle">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>
    <style name="LifeTextStyle" parent="AttributeTextStyle">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>
    <style name="RecoverTextStyle" parent="AttributeTextStyle">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

</resources>